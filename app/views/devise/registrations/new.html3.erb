<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="campo">
    <label for="nome">Nome</label>
    <%= f.text_field :nome, id: "nome" %>
  </div>

  <div class="campo">
    <label for="cpf">CPF</label>
    <%= f.text_field :cpf, id: "cpf" %>
  </div>

  <div class="campo">
    <label for="rg">RG</label>
    <%= f.text_field :rg, id: "rg" %>
  </div>

  <div class="campo">
    <label for="telefone">Telefone</label>
    <%= f.text_field :telefone, id: "telefone" %>
  </div>

  <div class="campo">
    <label for="secretaria">Secretaria</label>
    <select name="secretaria" id="secretaria">
      <% Secretaria.all.each do |secretaria| %>
        <option value="<%= secretaria.id %>"><%= secretaria.nome %></option>
      <% end %>
    </select>
  </div>

  <div class="campo">
    <label for="unidade">Unidade</label>
    <%= f.text_field :unidade, id: "unidade" %>
  </div>

  <div class="campo">
    <label for="cargo">Cargo</label>
    <%= f.text_field :cargo, id: "cargo" %>
  </div>

  <div class="actions">
    <%= f.submit "Cadastrar" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
